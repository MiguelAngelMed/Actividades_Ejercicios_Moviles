<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bienvenido">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bckground"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <TextView
            android:id="@+id/lblBienvenido"
            style="@style/estiloBoton"
            android:layout_height="125dp"
            android:layout_marginTop="40dp"
            android:hint = "@string/textoBienvenido"
        />

        <Button
            android:id="@+id/btnAceptar"
            style="@style/estiloBoton"
            android:layout_marginTop="16dp"
            android:hint="@string/logout"
            android:onClick="cerrarSesion"
            />

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/tigre"
        app:civ_border_color="#FF000000"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="#79ffffff"

        />

        <Button
            android:id="@+id/btnLlamar"
            style="@style/estiloBoton"
            android:layout_marginTop="16dp"
            android:hint="@string/Llamar"
            android:onClick="llamar"
            android:textColor="#000000" />

        <Button
            android:id="@+id/enviarCorreo"
            style="@style/estiloBoton"
            android:layout_marginTop="16dp"
            android:hint="@string/EnviarCorreo"
            android:onClick="enviarCorreo"
            android:textColor="#000000" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>