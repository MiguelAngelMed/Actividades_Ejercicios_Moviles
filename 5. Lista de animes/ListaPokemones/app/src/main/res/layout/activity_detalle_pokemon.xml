<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".DetallePokemon">

    <TextView
        android:id="@+id/txtNombrePoke"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="77dp"

        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTipoPoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblNombre"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <TextView
        android:id="@+id/txtTipoPoke"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="132dp"

        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHabilidadPoke"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="64dp"

        android:layout_marginBottom="59dp"
        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imagenPokemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblHabilidad"
        app:layout_constraintTop_toBottomOf="@+id/txtNombrePoke" />

    <ImageView
        android:id="@+id/imagenPokemon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="262dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="casual"
        android:text="@string/nomI"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtNombrePoke"
        app:layout_constraintEnd_toStartOf="@+id/txtNombrePoke"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblHabilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="casual"
        android:text="@string/habilidadI"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtHabilidadPoke"
        app:layout_constraintEnd_toStartOf="@+id/txtHabilidadPoke"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="casual"
        android:text="InformaciÃ³n pokemon"
        android:textColor="@color/azulEscom"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/txtNombrePoke"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="casual"
        android:text="@string/tipoI"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtTipoPoke"
        app:layout_constraintEnd_toStartOf="@+id/txtTipoPoke"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>