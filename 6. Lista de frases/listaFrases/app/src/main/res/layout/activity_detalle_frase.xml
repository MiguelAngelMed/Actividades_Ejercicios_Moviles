<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".DetalleFrase">

    <TextView
        android:id="@+id/txtId"
        android:layout_width="275dp"
        android:layout_height="40dp"

        android:layout_marginEnd="51dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtFrase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblId"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <TextView
        android:id="@+id/txtFrase"
        android:layout_width="272dp"
        android:layout_height="154dp"

        android:layout_marginEnd="25dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtAutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/txtId" />

    <TextView
        android:id="@+id/txtAutor"
        android:layout_width="243dp"
        android:layout_height="35dp"

        android:layout_marginEnd="44dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imagenFrase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblAutor"
        app:layout_constraintTop_toBottomOf="@+id/txtFrase" />

    <ImageView
        android:id="@+id/imagenFrase"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_marginBottom="145dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAutor" />

    <TextView
        android:id="@+id/lblId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="casual"
        android:text="@string/idI"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtId"
        app:layout_constraintEnd_toStartOf="@+id/txtId"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="casual"
        android:text="@string/autorI"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtAutor"
        app:layout_constraintEnd_toStartOf="@+id/txtAutor"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="247dp"
        android:layout_height="61dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="casual"
        android:text="InformaciÃ³n frase"
        android:textColor="#ED4E73"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/txtId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="casual"
        android:text="@string/fraseI"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtFrase"
        app:layout_constraintEnd_toStartOf="@+id/txtFrase"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>